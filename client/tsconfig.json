{
	"compilerOptions": {
	  "module": "ES2020",
	  "declaration": false,
	  "sourceMap": true,
	  "outDir": "./dist",
	  "strict": true,
	  "noImplicitAny": true,
	  "lib": ["ES2022", "DOM"],
	  "downlevelIteration": true,
	  "skipLibCheck": true
	},
	"include": [
	  "./src/**/*.js",
      "./src/**/*.ts"
	],
	"exclude": [
	  "./node_modules/**/*"
	],
	"ts-node": {
		"files": true
	},
	"files": [
		"./src/types.d.ts"
	]
  }
